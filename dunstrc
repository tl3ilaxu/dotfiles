[global]
    font = "Monospace 11"
    allow_markup = yes
    format = "<b>%s %p</b>\n%b"
    sort = yes
    shrink = no
    indicate_hidden = true
    idle_threshold = 120
    geometry = "300x5-20+30"
    alignment = center
    show_age_threshold = 60
    sticky_history = yes
    follow = keyboard
    word_wrap = yes
    separator_height = 2
    transparency = 25
    padding = 8
    horizontal_padding = 5
    separator_color = auto
    startup_notification = false
    icon_position = left
    dmenu = /usr/bin/yeganesh -p dunst:
    browser = /usr/bin/qutebrowser


[frame]
    width = 0
    color = "#444444"

[shortcuts]

    # close notification
    close = ctrl+space

    # close all notifications
    close_all = ctrl+shift+space

    # redisplay last message(s)
    # On the US keyboard layout 'grave' is normally above TAB and left of '1'.
    history = ctrl+grave

    # context menu
    context = ctrl+shift+semicolon

[urgency_low]
    background = "#222222"
    foreground = "#718888"
    timeout = 5

[urgency_normal]
    foreground = "#15191f"
    background = "#FFFFFF"
    timeout = 8

[urgency_critical]
    background = "#900000"
    foreground = "#FFFFFF"
    timeout = 10
