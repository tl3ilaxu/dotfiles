[global]
    font = "Cantarell, Font Awesome 12"
    allow_markup = yes
    format = "%s"
    line_height = 0
    sort = yes
    shrink = no
    indicate_hidden = true
    idle_threshold = 120
    geometry = "0x0-30+10"
    alignment = left
    show_age_threshold = -1
    sticky_history = yes
    follow = keyboard
    word_wrap = no
    separator_height = 2
    transparency = 0
    padding = 8
    horizontal_padding = 16
    separator_color = auto
    startup_notification = false
    icon_position = off
    #ignore_newline = yes
    dmenu = /usr/bin/yeganesh -p dunst:
    browser = /usr/bin/qutebrowser


[frame]
    width = 0
    color = "#444444"

[shortcuts]

    # close notification
    close = ctrl+space

    # close all notifications
    close_all = ctrl+shift+space

    # redisplay last message(s)
    # On the US keyboard layout 'grave' is normally above TAB and left of '1'.
    history = ctrl+grave

    # context menu
    context = ctrl+shift+semicolon

[urgency_low]
    background = "#222222"
    foreground = "#718888"
    timeout = 5

[urgency_normal]
    foreground = "#71c3af"
    background = "#1d2a30"
    timeout = 10

[urgency_critical]
    background = "#900000"
    foreground = "#FFFFFF"
    timeout = 0
