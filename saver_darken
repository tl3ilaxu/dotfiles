# Locks the screen with an image that is darkend by 30% shuts the sceen off after 10 seconds
(
  sleep 10
# Don't turn screen off if we are not locked
  trap '' TERM
  xset dpms force off
) &
# Draws image on window and darkens image
eval 'exec xloadimage -fullscreen -brighten 70 -windowid $XSCREENSAVER_WINDOW /home/tleilaxu/.config/screensaver/screensaver.png'
